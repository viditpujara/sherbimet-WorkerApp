<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sherbimet.worker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".Activity.SelectPackageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.SelectCityActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.SelectPincodeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.SelectPreferredLanguageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.WorkerRequestsServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.SuccessMessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.LoginOtpVerificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>