<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerX="38%"
                android:endColor="@color/gradientStartColor"
                android:startColor="@color/gradientEndColor"
                android:type="linear"/>
            <corners android:radius="15dp"></corners>
        </shape>
    </item>
    <item android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="15dp"></corners>
        </shape>
    </item>
</layer-list>